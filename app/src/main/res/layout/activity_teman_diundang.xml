<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.akun.referral.teman_diundang.TemanDiundangActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_gradient_blue" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/pure_white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_teman_diundang"
        android:textColor="@color/pure_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        android:background="@color/pure_white"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_blue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_num_referral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/num_1"
                android:textColor="@color/dark_grey"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar_referral"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/avatar_dummy1"
                app:civ_border_color="@color/dark_blue"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_num_referral"
                app:layout_constraintStart_toEndOf="@id/tv_num_referral"
                app:layout_constraintTop_toTopOf="@id/tv_num_referral" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nama_referral"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/txt_dummy_name1"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_tgl_referral"
                app:layout_constraintStart_toEndOf="@id/iv_avatar_referral"
                app:layout_constraintTop_toTopOf="@id/iv_avatar_referral" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tgl_referral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/txt_dummy_tgl1"
                android:textColor="#969CA2"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar_referral"
                app:layout_constraintStart_toStartOf="@id/tv_nama_referral"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_referral"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_xp_referral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_num_2"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="11dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="2dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_ap_xp" />

                <TextView
                    android:id="@+id/ic_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_plus"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_poin_referral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_num_100"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_ap_poin" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/cv_2"
        layout="@layout/item_referral_teman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_1" />

    <include
        android:id="@+id/cv_3"
        layout="@layout/item_referral_teman2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_2" />


    <LinearLayout
        android:id="@+id/iv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/bg_textview_blue"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_3">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_ajak_teman" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:drawablePadding="7dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/txt_ajakteman_banyak"
            android:textColor="@color/pure_white"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>