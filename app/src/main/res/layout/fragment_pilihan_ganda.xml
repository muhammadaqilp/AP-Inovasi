<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tantangan.mingguan.games.pilihanganda.PilihanGandaFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_tebak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pilihan Ganda"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_clue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:background="@drawable/bg_textview_blue"
        android:clickable="true"
        android:drawableStart="@drawable/ic_clue"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="12dp"
        android:paddingTop="9dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="Clue"
        android:textColor="@color/pure_white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_tebak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_tebak" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_rule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Pilih jawaban yang benar dari pilihan ganda di bawah ini berdasarkan pertanyaan yang ada"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_clue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iv_tebak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Dimana letak suku terbanyak yang ada di Indonesia ?"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_rule" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_tebak">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:outlineAmbientShadowColor="@color/dark_grey"
                android:outlineSpotShadowColor="@color/dark_grey"
                android:tag="unselected"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_opt_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Papua"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:outlineAmbientShadowColor="@color/dark_grey"
                android:outlineSpotShadowColor="@color/dark_grey"
                android:tag="unselected"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_opt_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Jawa"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:outlineAmbientShadowColor="@color/dark_grey"
                android:outlineSpotShadowColor="@color/dark_grey"
                android:tag="unselected"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_opt_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Sumatra"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:outlineAmbientShadowColor="@color/dark_grey"
                android:outlineSpotShadowColor="@color/dark_grey"
                android:tag="unselected"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_opt_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Sulawesi"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>